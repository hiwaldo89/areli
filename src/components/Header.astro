---
import HeaderLink from './HeaderLink.astro';
import Linkedin from './Linkedin.astro';
import globalData from '../data/global';

const pathname = new URL(Astro.request.url).pathname;
const { menuItems } = globalData;
---

<nav class="container mx-auto flex py-12 sticky top-0 bg-white z-50">
    <a href="/" class="mr-auto uppercase font-bold hover:text-yellow transition ease-in-out duration-300"
        >Areli Vel√°zquez</a
    >
    <ul class="flex items-center">
        {menuItems.map((link) => <HeaderLink href={link.href} text={link.text} isActive={pathname === link.href} />)}
        <li class="ml-10">
            <Linkedin />
        </li>
    </ul>
</nav>
